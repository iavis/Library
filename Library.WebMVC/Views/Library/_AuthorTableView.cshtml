    </div>

    <div class="col-md-7">
        @*authorTable.getAlphabet() = {{authorTable.getAlphabet()}}
            <br />
            authorTable.getLetter() = {{authorTable.getLetter()}}
            <br />
            authorTable.getSheetNum() = {{authorTable.getSheetNum()}}
            <br />
            authorTable.getSheetCount() = {{authorTable.getSheetCount()}}
            <br />
            authorTable.getMaxRows() = {{authorTable.getMaxRows()}}
            <br />
            authorTable.getData().length = {{authorTable.getData().length}}
            <br />
            authorTable.getSelected().length = {{authorTable.getSelected().length}}
            <br />
            {{trustAsHtml(tableJS.getArrayAsHtmlGrid(authorTable.getVisibleColumns()))}}
